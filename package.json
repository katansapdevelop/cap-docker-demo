{
  "name": "cap-docker-demo",
  "version": "2.1.9",
  "description": "Our primer sample for getting started in a nutshell.",
  "repository": "",
  "files": [
    "app",
    "srv",
    "db"
  ],
  "engines": {
    "node": ">=24"
  },
  "devDependencies": {
    "cds-plugin-ui5": "^0.13.0"
  },
  "dependencies": {
    "@sap/cds": "^9.7.0",
    "@cap-js/sqlite": "^2.1.1",
    "@sap-cloud-sdk/connectivity": "^4",
    "@sap-cloud-sdk/http-client": "^4",
    "@sap-cloud-sdk/resilience": "^4",
    "@sap/xssec": "^4"
  },
  "scripts": {
    "start": "cds serve",
    "watch": "cds watch",
    "build:prod": "docker build --target production -t cap-docker-demo:latest . && docker tag cap-docker-demo:latest katan/cap-docker-demo:latest && docker push katan/cap-docker-demo:latest",
    "build:dev": "docker build --target development -t cap-docker-demo:latest . && docker tag cap-docker-demo:latest katan/cap-docker-demo-dev:latest && docker push katan/cap-docker-demo-dev:latest",
    "deploy":"cf deploy ./",
    "update:xssecurity": "cds compile srv --to xsuaa > xs-security.json"
  },
  "license": "Apache-2.0",
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "impl": "@cap-js/sqlite",
        "credentials": {
          "url": ":memory:"
        }
      },
      "IntegrationContent": {
        "kind": "odata-v2",
        "model": "srv/external/IntegrationContent",
        "credentials": {
          "destination": "IS_APIS"
        }
      },
      "auth": {
        "kind": "mocked",
        "users": {
          "alice@test.com": {
            "password": "alice",
            "roles": [
              "monitor",
              "configure"
            ],
            "scopes": [
              "monitor",
              "configure"
            ]
          },
          "bob@test.com": {
            "password": "bob",
            "roles": [
              "monitor"
            ]
          }
        }
      },
      "[production]": {
        "auth": {
          "kind": "xsuaa"
        }
      }
    }
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/docker-demo"
  ]
}
